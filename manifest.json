{
    "manifest_version": 2,
   
    "name": "Keenan's Dope Procore Helper",
    "version": "0.1.0",
    "description": "Names RFIs before download. Autofills RFI email text.",
    "permissions": [
      "downloads",
      "tabs",
      "activeTab",
      "storage", 
      "declarativeContent",
      "webNavigation",
      "https://s3.amazonaws.com/procore-pdf/*",
      "https://app.procore.com/447678/project/rfi/show/*"
    ],
    "options_page": "options.html",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "content_scripts": [{
      "matches": ["https://app.procore.com/447678/project/rfi/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }]
  }